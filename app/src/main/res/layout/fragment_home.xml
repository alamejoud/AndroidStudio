    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/banner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1italic"
            android:padding="10dp"
            android:text="@string/Today"
            android:textColor="@color/white"
            android:textSize="23sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:stretchColumns="0,1,2">

            <TableRow android:layout_marginVertical="5dp"
                android:background="@color/light_gray"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/team1a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:fontFamily="@font/font1"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="@string/Senegal"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img1a"
                            android:layout_width="@dimen/flag_size"
                            android:layout_height="@dimen/flag_size"
                            android:layout_gravity="center"
                            android:src="@drawable/netherlands_flag" />


                        <TextView
                            android:id="@+id/scoreA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/font1"
                            android:text="3 : 1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img2a"
                            android:layout_width="@dimen/flag_size"
                            android:layout_height="@dimen/flag_size"
                            android:layout_gravity="center"
                            android:src="@drawable/united_states_flag" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/team2a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:fontFamily="@font/font1"
                    android:gravity="end"
                    android:padding="5dp"
                    android:text="@string/United_States"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow android:layout_marginVertical="5dp"
                android:background="@color/light_gray"
                android:paddingVertical="5dp">

                <TextView
