<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/font1italic"
            android:text="@string/Group_A"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/font1italic"
            android:text="@string/points"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@color/light_gray"
        android:stretchColumns="3">

        <TableRow
            android:background="@drawable/tablerow"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/flag_size"
                android:layout_height="@dimen/flag_size"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:src="@drawable/netherlands_flag" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:text="@string/Netherlands"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </TableRow>

        <TableRow
            android:background="@drawable/tablerow"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/flag_size"
                android:layout_height="@dimen/flag_size"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:src="@drawable/netherlands_flag" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:text="@string/Netherlands"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </TableRow>

        <TableRow
            android:background="@drawable/tablerow"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img3"
                android:layout_width="@dimen/flag_size"
                android:layout_height="@dimen/flag_size"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:src="@drawable/netherlands_flag" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:text="@string/Netherlands"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </TableRow>

        <TableRow
            android:background="@drawable/tablerow"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img4"
                android:layout_width="@dimen/flag_size"
                android:layout_height="@dimen/flag_size"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:src="@drawable/netherlands_flag" />

            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:text="@string/Netherlands"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font1"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

</LinearLayout>